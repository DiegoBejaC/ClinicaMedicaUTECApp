<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondoMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDEDE"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="0dp"
        android:layout_height="109dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/descripcionImagenes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_clinica_utec" />

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="315dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo">

        <ImageView
            android:id="@+id/ingNuevaCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descripcionImagenes"
            app:srcCompat="@drawable/ic_action_calendar_day" />

        <Button
            android:id="@+id/btnNuevaCita"
            android:layout_width="267dp"
            android:layout_height="match_parent"
            android:background="#CC0000"
            android:fontFamily="sans-serif-black"
            android:onClick="abrirCita"
            android:text="@string/C_nuevacita"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:backgroundTint="#CC0000" />
    </TableRow>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgContacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/descripcionImagenes"
                app:srcCompat="@drawable/ic_action_phone_start" />

            <Button
                android:id="@+id/btnContacto"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:background="#FFC7C7"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="abrirContacto"
                android:text="@string/D_contacto"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:backgroundTint="#EA8E8E" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/descripcionImagenes"
                app:srcCompat="@drawable/ic_action_clock" />

            <Button
                android:id="@+id/btnHorarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFC7C7"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="abrirHorarios"
                android:text="@string/E_horario"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:backgroundTint="#EA8E8E" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ingConfig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/descripcionImagenes"
                app:srcCompat="@drawable/ic_action_gear" />

            <Button
                android:id="@+id/btnConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFC7C7"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="abrirConfig"
                android:text="@string/F_config"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:backgroundTint="#EA8E8E" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ingAcercaDe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/descripcionImagenes"
                app:srcCompat="@drawable/ic_action_news" />

            <Button
                android:id="@+id/btnAcercaDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFC7C7"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="abrirAcercaDe"
                android:text="@string/tituloAcercaDe"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:backgroundTint="#EA8E8E" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgSalir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/descripcionImagenes"
                app:srcCompat="@drawable/ic_action_cancel" />

            <Button
                android:id="@+id/btnSalir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFC7C7"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="salir"
                android:text="@string/G_salir"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:backgroundTint="#EA8E8E" />
        </TableRow>

    </TableLayout>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

        <ImageView
            android:id="@+id/imgAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descripcionImagenes"
            app:srcCompat="@drawable/ic_action_star_10" />

        <Button
            android:id="@+id/btnAdmin"
            android:layout_width="267dp"
            android:layout_height="match_parent"
            android:background="#FF5D5D"
            android:fontFamily="sans-serif-condensed-medium"
            android:onClick="abrirAdmin"
            android:text="@string/H_admin"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="#FF5D5D" />

    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>